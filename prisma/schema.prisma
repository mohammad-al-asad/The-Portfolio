generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model projects {
  id                  String     @id @default(uuid()) @map("_id")
  title               String
  description         String
  detailedDescription String?
  categoryId          String
  category            categories @relation(fields: [categoryId], references: [id])
  tags                String[]
  technologies        String[]
  features            String[]
  imageUrl            String
  imagePath           String
  liveUrl             String?
  githubUrl           String
  completionDate      String?
  teamSize            String?
  featured            Boolean    @default(false)
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
}

model categories {
  id          String     @id @default(uuid()) @map("_id")
  name        String
  description String
  project     projects[]
}

model resumes {
  id        String @id @default(uuid()) @map("_id")
  resumeUrl String
}

model admins {
  id       String @id @default(uuid()) @map("_id")
  name     String
  email    String
  password String
}

model educations {
  id                  String   @id @default(uuid()) @map("_id")
  institution         String
  degree              String
  period              String
  location            String
  description         String
  detailedDescription String?
  gpa                 String
  courses             String[]
  imageUrl            String
  imagePath           String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model achievements {
  id                  String   @id @default(uuid()) @map("_id")
  title               String
  organization        String
  year                String
  description         String
  detailedDescription String?
  imageUrl            String
  imagePath           String
  technologies        String[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
